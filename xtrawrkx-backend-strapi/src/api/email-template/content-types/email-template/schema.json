{
    "kind": "collectionType",
    "collectionName": "email_templates",
    "info": {
        "singularName": "email-template",
        "pluralName": "email-templates",
        "displayName": "Email Template",
        "description": "Reusable email templates"
    },
    "options": {
        "draftAndPublish": false
    },
    "pluginOptions": {},
    "attributes": {
        "name": {
            "type": "string",
            "required": true
        },
        "subject": {
            "type": "string",
            "required": true
        },
        "content": {
            "type": "richtext",
            "required": true
        },
        "category": {
            "type": "string"
        },
        "isActive": {
            "type": "boolean",
            "default": true
        },
        "createdBy": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::xtrawrkx-user.xtrawrkx-user",
            "inversedBy": "createdTemplates"
        },
        "campaigns": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::email-campaign.email-campaign",
            "mappedBy": "template"
        }
    }
}



