{
    "kind": "collectionType",
    "collectionName": "lead_companies",
    "info": {
        "singularName": "lead-company",
        "pluralName": "lead-companies",
        "displayName": "Lead Company",
        "description": "Potential client companies in the sales pipeline"
    },
    "options": {
        "draftAndPublish": false
    },
    "pluginOptions": {},
    "attributes": {
        "companyName": {
            "type": "string",
            "required": true,
            "unique": true
        },
        "industry": {
            "type": "string",
            "required": true
        },
        "website": {
            "type": "string"
        },
        "phone": {
            "type": "string"
        },
        "email": {
            "type": "email"
        },
        "address": {
            "type": "text"
        },
        "city": {
            "type": "string"
        },
        "state": {
            "type": "string"
        },
        "country": {
            "type": "string"
        },
        "zipCode": {
            "type": "string"
        },
        "employees": {
            "type": "string"
        },
        "founded": {
            "type": "string"
        },
        "description": {
            "type": "text"
        },
        "segment": {
            "type": "enumeration",
            "enum": [
                "HOT",
                "WARM",
                "COLD"
            ],
            "default": "WARM"
        },
        "status": {
            "type": "enumeration",
            "enum": [
                "NEW",
                "CONTACTED",
                "QUALIFIED",
                "PROPOSAL_SENT",
                "NEGOTIATION",
                "LOST",
                "CONVERTED"
            ],
            "default": "NEW"
        },
        "score": {
            "type": "integer",
            "min": 0,
            "max": 100,
            "default": 50
        },
        "source": {
            "type": "enumeration",
            "enum": [
                "WEBSITE",
                "REFERRAL",
                "COLD_OUTREACH",
                "SOCIAL_MEDIA",
                "EVENT",
                "PARTNER",
                "ADVERTISING",
                "MANUAL"
            ],
            "default": "MANUAL"
        },
        "dealValue": {
            "type": "decimal",
            "default": 0
        },
        "healthScore": {
            "type": "integer",
            "min": 0,
            "max": 100,
            "default": 50
        },
        "convertedAt": {
            "type": "datetime"
        },
        "lastContactDate": {
            "type": "datetime"
        },
        "nextFollowUpDate": {
            "type": "datetime"
        },
        "linkedIn": {
            "type": "string"
        },
        "twitter": {
            "type": "string"
        },
        "notes": {
            "type": "text"
        },
        "contacts": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::contact.contact",
            "mappedBy": "leadCompany"
        },
        "activities": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::activity.activity",
            "mappedBy": "leadCompany"
        },
        "chatMessages": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::chat-message.chat-message",
            "mappedBy": "leadCompany"
        },
        "tasks": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::task.task",
            "mappedBy": "leadCompany"
        },
        "deals": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::deal.deal",
            "mappedBy": "leadCompany"
        },
        "proposals": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::proposal.proposal",
            "mappedBy": "leadCompany"
        },
        "assignedTo": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::xtrawrkx-user.xtrawrkx-user"
        },
        "convertedAccount": {
            "type": "relation",
            "relation": "oneToOne",
            "target": "api::client-account.client-account",
            "inversedBy": "convertedFromLead"
        }
    }
}