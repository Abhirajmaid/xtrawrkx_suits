{
    "kind": "collectionType",
    "collectionName": "email_logs",
    "info": {
        "singularName": "email-log",
        "pluralName": "email-logs",
        "displayName": "Email Log",
        "description": "Email delivery and engagement tracking"
    },
    "options": {
        "draftAndPublish": false
    },
    "pluginOptions": {},
    "attributes": {
        "campaign": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::email-campaign.email-campaign",
            "inversedBy": "emailLogs"
        },
        "recipientType": {
            "type": "enumeration",
            "enum": [
                "LEAD",
                "CONTACT",
                "ACCOUNT"
            ],
            "required": true
        },
        "recipientId": {
            "type": "string",
            "required": true
        },
        "email": {
            "type": "email",
            "required": true
        },
        "status": {
            "type": "enumeration",
            "enum": [
                "SENT",
                "DELIVERED",
                "OPENED",
                "CLICKED",
                "BOUNCED",
                "UNSUBSCRIBED"
            ],
            "default": "SENT"
        },
        "sentAt": {
            "type": "datetime"
        },
        "deliveredAt": {
            "type": "datetime"
        },
        "openedAt": {
            "type": "datetime"
        },
        "clickedAt": {
            "type": "datetime"
        },
        "lead": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::lead.lead",
            "inversedBy": "emailLogs"
        },
        "proposals": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::proposal.proposal",
            "mappedBy": "emailLog"
        }
    }
}



