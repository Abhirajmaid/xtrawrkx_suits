{
    "kind": "collectionType",
    "collectionName": "user_roles",
    "info": {
        "singularName": "user-role",
        "pluralName": "user-roles",
        "displayName": "User Role",
        "description": "User roles and permissions"
    },
    "options": {
        "draftAndPublish": false
    },
    "pluginOptions": {},
    "attributes": {
        "name": {
            "type": "string",
            "required": true,
            "unique": true
        },
        "description": {
            "type": "text"
        },
        "isSystemRole": {
            "type": "boolean",
            "default": false
        },
        "rank": {
            "type": "integer",
            "default": 10,
            "min": 1,
            "max": 100
        },
        "color": {
            "type": "string",
            "default": "from-gray-500 to-gray-600"
        },
        "icon": {
            "type": "string",
            "default": "Shield"
        },
        "permissions": {
            "type": "json",
            "default": {}
        },
        "visibility": {
            "type": "enumeration",
            "enum": [
                "private",
                "team",
                "org"
            ],
            "default": "private"
        },
        "users": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::xtrawrkx-user.xtrawrkx-user",
            "inversedBy": "userRoles"
        },
        "primaryUsers": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::xtrawrkx-user.xtrawrkx-user",
            "mappedBy": "primaryRole"
        }
    }
}