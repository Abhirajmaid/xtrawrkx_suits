{
    "kind": "collectionType",
    "collectionName": "deal_groups",
    "info": {
        "singularName": "deal-group",
        "pluralName": "deal-groups",
        "displayName": "Deal Group",
        "description": "Groups or folders to organize deals by department or team"
    },
    "options": {
        "draftAndPublish": false
    },
    "pluginOptions": {},
    "attributes": {
        "name": {
            "type": "string",
            "required": true
        },
        "description": {
            "type": "text"
        },
        "department": {
            "type": "string"
        },
        "team": {
            "type": "string"
        },
        "createdBy": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::xtrawrkx-user.xtrawrkx-user"
        },
        "deals": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::deal.deal",
            "mappedBy": "dealGroup"
        }
    }
}

