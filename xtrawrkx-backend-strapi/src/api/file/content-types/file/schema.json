{
    "kind": "collectionType",
    "collectionName": "custom_files",
    "info": {
        "singularName": "file",
        "pluralName": "files",
        "displayName": "File",
        "description": "File attachments and documents"
    },
    "options": {
        "draftAndPublish": false
    },
    "pluginOptions": {},
    "attributes": {
        "name": {
            "type": "string",
            "required": true
        },
        "originalName": {
            "type": "string",
            "required": true
        },
        "path": {
            "type": "string",
            "required": true
        },
        "size": {
            "type": "integer",
            "required": true
        },
        "mimeType": {
            "type": "string",
            "required": true
        },
        "relatedType": {
            "type": "enumeration",
            "enum": [
                "PROJECT",
                "TASK",
                "DEAL",
                "CONTACT",
                "ACCOUNT",
                "LEAD",
                "PROPOSAL",
                "CONTRACT"
            ],
            "required": true
        },
        "relatedId": {
            "type": "string",
            "required": true
        },
        "uploadedBy": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::xtrawrkx-user.xtrawrkx-user",
            "inversedBy": "createdFiles"
        },
        "account": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::account.account",
            "inversedBy": "files"
        },
        "contact": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::contact.contact",
            "inversedBy": "files"
        },
        "project": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::project.project",
            "inversedBy": "files"
        },
        "task": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::task.task",
            "inversedBy": "files"
        },
        "invoice": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::invoice.invoice",
            "inversedBy": "files"
        }
    }
}



