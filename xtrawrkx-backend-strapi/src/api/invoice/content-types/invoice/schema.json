{
    "kind": "collectionType",
    "collectionName": "invoices",
    "info": {
        "singularName": "invoice",
        "pluralName": "invoices",
        "displayName": "Invoice",
        "description": "Client invoices and billing"
    },
    "options": {
        "draftAndPublish": false
    },
    "pluginOptions": {},
    "attributes": {
        "account": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::account.account",
            "inversedBy": "invoices"
        },
        "invoiceNumber": {
            "type": "string",
            "required": true,
            "unique": true
        },
        "issueDate": {
            "type": "datetime",
            "required": true
        },
        "dueDate": {
            "type": "datetime",
            "required": true
        },
        "amount": {
            "type": "decimal",
            "required": true
        },
        "taxAmount": {
            "type": "decimal",
            "default": 0
        },
        "totalAmount": {
            "type": "decimal",
            "required": true
        },
        "status": {
            "type": "enumeration",
            "enum": [
                "DRAFT",
                "SENT",
                "PAID",
                "OVERDUE",
                "CANCELLED"
            ],
            "default": "DRAFT"
        },
        "createdBy": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::xtrawrkx-user.xtrawrkx-user",
            "inversedBy": "createdInvoices"
        },
        "sentAt": {
            "type": "datetime"
        },
        "paidDate": {
            "type": "datetime"
        },
        "notes": {
            "type": "text"
        },
        "items": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::invoice-item.invoice-item",
            "mappedBy": "invoice"
        },
        "files": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::file.file",
            "mappedBy": "invoice"
        }
    }
}



