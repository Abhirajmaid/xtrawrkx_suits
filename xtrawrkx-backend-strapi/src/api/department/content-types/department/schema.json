{
    "kind": "collectionType",
    "collectionName": "departments",
    "info": {
        "singularName": "department",
        "pluralName": "departments",
        "displayName": "Department",
        "description": "Company departments for user organization"
    },
    "options": {
        "draftAndPublish": false
    },
    "pluginOptions": {},
    "attributes": {
        "name": {
            "type": "string",
            "required": true,
            "unique": true,
            "maxLength": 100
        },
        "code": {
            "type": "string",
            "required": true,
            "unique": true,
            "maxLength": 20
        },
        "description": {
            "type": "text",
            "maxLength": 500
        },
        "isActive": {
            "type": "boolean",
            "default": true
        },
        "sortOrder": {
            "type": "integer",
            "default": 0
        },
        "color": {
            "type": "string",
            "maxLength": 7,
            "default": "#3B82F6"
        },
        "users": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::xtrawrkx-user.xtrawrkx-user",
            "mappedBy": "department"
        }
    }
}