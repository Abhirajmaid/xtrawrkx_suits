{
    "kind": "collectionType",
    "collectionName": "tasks",
    "info": {
        "singularName": "task",
        "pluralName": "tasks",
        "displayName": "Task",
        "description": "CRM tasks for entity-specific task management"
    },
    "options": {
        "draftAndPublish": false
    },
    "pluginOptions": {},
    "attributes": {
        "title": {
            "type": "string",
            "required": true
        },
        "description": {
            "type": "text"
        },
        "status": {
            "type": "enumeration",
            "enum": [
                "SCHEDULED",
                "IN_PROGRESS",
                "IN_REVIEW",
                "COMPLETED",
                "CANCELLED"
            ],
            "default": "SCHEDULED"
        },
        "priority": {
            "type": "enumeration",
            "enum": [
                "LOW",
                "MEDIUM",
                "HIGH"
            ],
            "default": "MEDIUM"
        },
        "scheduledDate": {
            "type": "datetime"
        },
        "completedDate": {
            "type": "datetime"
        },
        "createdBy": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::xtrawrkx-user.xtrawrkx-user",
            "inversedBy": "tasks"
        },
        "assignee": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::xtrawrkx-user.xtrawrkx-user",
            "inversedBy": "assignedTasks"
        },
        "leadCompany": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::lead-company.lead-company",
            "inversedBy": "tasks"
        },
        "clientAccount": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::client-account.client-account",
            "inversedBy": "tasks"
        },
        "contact": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::contact.contact",
            "inversedBy": "tasks"
        },
        "deal": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::deal.deal",
            "inversedBy": "tasks"
        },
        "projects": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::project.project",
            "inversedBy": "tasks"
        },
        "progress": {
            "type": "integer",
            "min": 0,
            "max": 100,
            "default": 0
        },
        "tags": {
            "type": "json"
        },
        "subtasks": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::subtask.subtask",
            "mappedBy": "task"
        },
        "collaborators": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::xtrawrkx-user.xtrawrkx-user"
        }
    }
}
