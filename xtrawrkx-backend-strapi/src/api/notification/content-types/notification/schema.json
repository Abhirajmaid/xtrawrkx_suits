{
    "kind": "collectionType",
    "collectionName": "notifications",
    "info": {
        "singularName": "notification",
        "pluralName": "notifications",
        "displayName": "Notification",
        "description": "User notifications and alerts"
    },
    "options": {
        "draftAndPublish": false
    },
    "pluginOptions": {},
    "attributes": {
        "user": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::xtrawrkx-user.xtrawrkx-user",
            "inversedBy": "notifications"
        },
        "type": {
            "type": "enumeration",
            "enum": [
                "DEAL_WON",
                "TASK_ASSIGNED",
                "PROJECT_UPDATE",
                "LEAD_ASSIGNED",
                "SYSTEM"
            ],
            "required": true
        },
        "title": {
            "type": "string",
            "required": true
        },
        "message": {
            "type": "string",
            "required": true
        },
        "isRead": {
            "type": "boolean",
            "default": false
        },
        "readAt": {
            "type": "datetime"
        }
    }
}



