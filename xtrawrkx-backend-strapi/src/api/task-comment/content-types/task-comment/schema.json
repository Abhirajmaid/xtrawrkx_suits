{
    "kind": "collectionType",
    "collectionName": "task_comments",
    "info": {
        "singularName": "task-comment",
        "pluralName": "task-comments",
        "displayName": "Task Comment",
        "description": "Comments and discussions on tasks"
    },
    "options": {
        "draftAndPublish": false
    },
    "pluginOptions": {},
    "attributes": {
        "commentableType": {
            "type": "enumeration",
            "enum": [
                "TASK",
                "SUBTASK"
            ],
            "required": true
        },
        "commentableId": {
            "type": "string",
            "required": true
        },
        "user": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::xtrawrkx-user.xtrawrkx-user",
            "inversedBy": "taskComments"
        },
        "content": {
            "type": "text",
            "required": true
        },
        "parentComment": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::task-comment.task-comment",
            "inversedBy": "replies"
        },
        "replies": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::task-comment.task-comment",
            "mappedBy": "parentComment"
        },
        "mentions": {
            "type": "json"
        }
    }
}