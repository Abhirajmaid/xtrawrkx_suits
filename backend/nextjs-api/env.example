# =================================
# XTRAWRKX BACKEND API - ENVIRONMENT CONFIGURATION
# =================================

# =================================
# DATABASE CONFIGURATION
# =================================
# PostgreSQL database connection string
# Format: postgresql://username:password@host:port/database?schema=public
DATABASE_URL="postgresql://username:password@localhost:5432/xtrawrkx_db?schema=public"

# =================================
# AUTHENTICATION & SECURITY
# =================================
# Strong JWT secret for token signing (generate a strong random string)
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters-long-change-this-in-production"

# NextAuth.js secret (generate a strong random string)
NEXTAUTH_SECRET="your-nextauth-secret-minimum-32-characters-long-change-this-in-production"

# =================================
# FIREBASE ADMIN SDK CONFIGURATION
# =================================
# Firebase project ID
FIREBASE_PROJECT_ID="xtrawrkx"

# Firebase private key (from service account JSON - keep all \n characters)
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Firebase-Private-Key-Here\n-----END PRIVATE KEY-----\n"

# Firebase client email (from service account JSON)
FIREBASE_CLIENT_EMAIL="firebase-adminsdk-xxxxx@xtrawrkx.iam.gserviceaccount.com"

# =================================
# FIREBASE WEB APP CONFIG (for frontend)
# =================================
NEXT_PUBLIC_FIREBASE_API_KEY="your-firebase-api-key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="xtrawrkx.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="xtrawrkx"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="xtrawrkx.firebasestorage.app"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your-messaging-sender-id"
NEXT_PUBLIC_FIREBASE_APP_ID="your-firebase-app-id"

# =================================
# CORS CONFIGURATION
# =================================
# Allowed origins for CORS (comma-separated for multiple origins)
ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com,https://accounts.yourdomain.com,https://crm.yourdomain.com,https://pm.yourdomain.com,https://client-portal.yourdomain.com"

# =================================
# EMAIL CONFIGURATION (SMTP)
# =================================
# SMTP server configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Email settings
FROM_EMAIL="noreply@yourdomain.com"
FROM_NAME="Xtrawrkx"

# =================================
# APPLICATION SETTINGS
# =================================
# Node environment
NODE_ENV="production"

# API base URL
API_BASE_URL="https://api.yourdomain.com"

# Frontend URLs
ACCOUNTS_URL="https://accounts.yourdomain.com"
CRM_URL="https://crm.yourdomain.com"
PM_DASHBOARD_URL="https://pm.yourdomain.com"
CLIENT_PORTAL_URL="https://client-portal.yourdomain.com"

# =================================
# OPTIONAL INTEGRATIONS
# =================================
# Stripe (if using payments)
STRIPE_SECRET_KEY="sk_live_..."
STRIPE_PUBLISHABLE_KEY="pk_live_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# File upload settings
MAX_FILE_SIZE="10485760"  # 10MB in bytes
UPLOAD_DIR="./uploads"

# =================================
# SECURITY HEADERS
# =================================
# Rate limiting
RATE_LIMIT_MAX="100"  # requests per window
RATE_LIMIT_WINDOW="900000"  # 15 minutes in milliseconds

# =================================
# LOGGING & MONITORING
# =================================
# Log level (error, warn, info, debug)
LOG_LEVEL="info"

# Enable/disable logging
ENABLE_LOGGING="true"

