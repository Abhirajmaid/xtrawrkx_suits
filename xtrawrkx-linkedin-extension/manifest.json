{
  "manifest_version": 3,
  "name": "Xtrawrkx LinkedIn Extension",
  "version": "1.0.0",
  "description": "Extract LinkedIn profile and company data for Xtrawrkx CRM",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel",
    "tabs"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://xtrawrkxsuits-production.up.railway.app/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*"
      ],
      "js": [
        "src/utils/logger.js",
        "src/content/linkedin-extractor.js"
      ],
      "css": [
        "src/content/styles.css"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "side_panel": {
    "default_path": "src/sidebar/sidebar.html"
  },
  "action": {
    "default_popup": "",
    "default_title": "Xtrawrkx LinkedIn Extension"
  },
  "options_page": "src/options/options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "src/sidebar/*",
        "src/options/*"
      ],
      "matches": [
        "https://www.linkedin.com/*"
      ]
    }
  ]
}